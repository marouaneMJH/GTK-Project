<window
    id="win1"
    width="1570"
    height="900"
    title="GTK IDE"
    icon_name="folder"
    has_header="true"
    is_maximized="false"
>

    <!-- icon_path="assets\images\programer.jpg" -->
    <box
        id="box1"
    >
        <menu_bar id="menu_bar1">

            <menu_item
                id="file_menu_item"
                label="_File"
            >
                <menu id="menu1">
                    <menu_item
                        id="new_menu_item"
                        label="_New"
                    />
                    <menu_item
                        id="open_menu_item"
                        label="_Save"
                    />

                    <menu_item
                        id="save_menu_item"
                        label=" _Exit"
                    />
                </menu>

            </menu_item>

            <menu_item
                id="about_menu_item"
                label="_About"
            />


        </menu_bar>

        <scrolled_window
            id="scw1"
            box_expand="true"
            box_fill="true"
        >
            <paned
                id="paned1"
                orientation="horizontal"
                position="200"
                is_wide="true"
            >
                <box
                    id="content_box"
                    paned_order="1"
                >
                    <label id="label1"
                        label_text="Widgets"
                        xalign="0.5"
                        yalign="0.5"
                        valign="center"
                        box_expand="true"
                        box_fill="true"
                    />

                </box>

                <paned
                    id="paned2"
                    orientation="horizontal"
                    paned_order="2"
                    position="1000"
                >

                    <scrolled_window
                        id="scw2"
                        paned_order="1"
                    >
	
					<notebook >
							<frame
								tab_label="UI Viewer"
								id="viewer"
								margin_top="5"
								margin_bottom="5"
								margin_left="5"
								margin_right="5"
								vexpand="true"
								hexpand="true"
							/>

							<text_area
									id="main-text-area"
									label="XML Viewer"
									tab_label="XML Viewer"
									placeholder="Void tree"
									
							/>

							
					</notebook>

                    </scrolled_window>

						<box
							id="box2"
							paned_order="2"
							spacing="10"
							margin_left="10"
							margin_top="20"
						>
							<!-- Layout Containers -->
							<expander
								id="frame1"
								label="Layout Containers"
								font_size="12"
								is_expanded="true"
							>
								<grid
									id="grid1"
									vexpand="true"
									hexpand="true"
									row_spacing="10"
									column_spacing="10"
									margin="5"
								>
									<button
										id="btn0"
										label="Box"
										hexpand="true"
										row="0"
										column="0"
										icon_path="./assets/images/icons/container_bw.png"
										on_click="sig_properties_dialog"
										param_1="box"
									/>
									<button
										id="btn2"
										label="Fixed"
										hexpand="true"
										row="0"
										column="1"
										icon_path="./assets/images/icons/container_bw.png"
										on_click="sig_properties_dialog"
										param_1="fixed"
									/>
									<button
										id="btn3"
										label="Grid"
										hexpand="true"
										row="1"
										column="0"
										icon_path="./assets/images/icons/container_bw.png"
										on_click="sig_properties_dialog"
										param_1="grid"
									/>
									<button
										id="btn4"
										label="FlowBox"
										hexpand="true"
										row="1"
										column="1"
										icon_path="./assets/images/icons/container_bw.png"
										on_click="sig_properties_dialog"
										param_1="flow_box"
									/>
									<button
										id="btn6"
										label="Overlay"
										hexpand="true"
										row="2"
										column="0"
										icon_path="./assets/images/icons/container_bw.png"
										on_click="sig_properties_dialog"
										param_1="overlay"
									/>
									<button
										id="btn1"
										label="Paned"
										hexpand="true"
										row="2"
										column="1"
										icon_path="./assets/images/icons/container_bw.png"
										on_click="sig_properties_dialog"
										param_1="paned"
									/>
									<button
										id="btn5"
										label="Notebook"
										hexpand="true"
										row="3"
										column="0"
										icon_path="./assets/images/icons/container_bw.png"
										on_click="sig_properties_dialog"
										param_1="notebook"
									/>
									<button
										id="btn7"
										label="Frame"
										hexpand="true"
										row="3"
										column="1"
										icon_path="./assets/images/icons/container_bw.png"
										on_click="sig_properties_dialog"
										param_1="frame"
									/>
									<button
										id="btn25"
										label="ScrolledWindow"
										hexpand="true"
										row="4"
										column="0"
										icon_path="./assets/images/icons/container_bw.png"
										on_click="sig_properties_dialog"
										param_1="scrolled_window"
									/>
								</grid>
							</expander>

							<!-- Menus -->
							<expander
								id="frame2"
								label="Menus"
								font_size="12"
							>
								<grid
									id="grid2"
									vexpand="true"
									hexpand="true"
									row_spacing="10"
									column_spacing="10"
									margin="5"
								>
									<button
										id="btn8"
										label="MenuBar"
										hexpand="true"
										row="0"
										column="0"
										icon_path="./assets/images/icons/open-menu.png"
										on_click="sig_properties_dialog"
										param_1="menu_bar"
									/>
									<button
										id="btn9-1"
										label="Menu"
										hexpand="true"
										row="0"
										column="1"
										icon_path="./assets/images/icons/open-menu.png"
										on_click="sig_properties_dialog"
										param_1="menu"
									/>
									<button
										id="btn9"
										label="MenuItem"
										hexpand="true"
										row="1"
										column="0"
										icon_path="./assets/images/icons/open-menu.png"
										on_click="sig_properties_dialog"
										param_1="menu_item"
									/>
								</grid>
							</expander>

							<!-- Basic Widgets -->
							<expander
								id="frame3"
								label="Basic Widgets"
								font_size="12"
							>
								<grid
									id="grid3"
									vexpand="true"
									hexpand="true"
									row_spacing="10"
									column_spacing="10"
									margin="5"
								>
									<button
										id="btn11"
										label="Label"
										hexpand="true"
										row="0"
										column="0"
										icon_path="./assets/images/icons/widget.png"
										on_click="sig_properties_dialog"
										param_1="label"
									/>
									<button
										id="btn23"
										label="Image"
										hexpand="true"
										row="0"
										column="1"
										icon_path="./assets/images/icons/widget.png"
										on_click="sig_properties_dialog"
										param_1="image"
									/>
									<button
										id="btn22"
										label="Separator"
										hexpand="true"
										row="1"
										column="0"
										icon_path="./assets/images/icons/widget.png"
										on_click="sig_properties_dialog"
										param_1="separator"
									/>
									<button
										id="btn12"
										label="LinkButton"
										hexpand="true"
										row="1"
										column="1"
										icon_path="./assets/images/icons/widget.png"
										on_click="sig_properties_dialog"
										param_1="link_button"
									/>
									<button
										id="btn21"
										label="ProgressBar"
										hexpand="true"
										row="2"
										column="0"
										icon_path="./assets/images/icons/widget.png"
										on_click="sig_properties_dialog"
										param_1="progress_bar"
									/>
								</grid>
							</expander>

							<!-- Buttons & Toggles -->
							<expander
								id="frame4"
								label="Buttons AND Toggles"
								font_size="12"
							>
								<grid
									id="grid4"
									vexpand="true"
									hexpand="true"
									row_spacing="10"
									column_spacing="10"
									margin="5"
								>
									<button
										id="btn13"
										label="Button"
										hexpand="true"
										row="0"
										column="0"
										icon_path="./assets/images/icons/toggle.png"
										on_click="sig_properties_dialog"
										param_1="button"
									/>
									<button
										id="btn16"
										label="ToggleButton"
										hexpand="true"
										row="0"
										column="1"
										icon_path="./assets/images/icons/toggle.png"
										on_click="sig_properties_dialog"
										param_1="toggle_button"
									/>
									<button
										id="btn17"
										label="RadioButton"
										hexpand="true"
										row="1"
										column="0"
										icon_path="./assets/images/icons/toggle.png"
										on_click="sig_properties_dialog"
										param_1="radio_button"
									/>
									<button
										id="btn18"
										label="Checkbox"
										hexpand="true"
										row="1"
										column="1"
										icon_path="./assets/images/icons/toggle.png"
										on_click="sig_properties_dialog"
										param_1="check_button"
									/>
									<button
										id="btn15"
										label="SwitchButton"
										hexpand="true"
										row="2"
										column="0"
										icon_path="./assets/images/icons/toggle.png"
										on_click="sig_properties_dialog"
										param_1="switch_button"
									/>
								</grid>
							</expander>

							<!-- Input Widgets -->
							<expander
								id="frame5"
								label="Input Widgets"
								font_size="12"
							>
								<grid
									id="grid5"
									vexpand="true"
									hexpand="true"
									row_spacing="10"
									column_spacing="10"
									margin="5"
								>
									<button
										id="btn14"
										label="Entry"
										hexpand="true"
										row="0"
										column="0"
										icon_path="./assets/images/icons/input.png"
										on_click="sig_properties_dialog"
										param_1="entry"
									/>
									<button
										id="btn19"
										label="TextArea"
										hexpand="true"
										row="0"
										column="1"
										icon_path="./assets/images/icons/input.png"
										on_click="sig_properties_dialog"
										param_1="text_area"
									/>
									<button
										id="btn20"
										label="SpinButton"
										hexpand="true"
										row="1"
										column="0"
										icon_path="./assets/images/icons/input.png"
										on_click="sig_properties_dialog"
										param_1="spin_button"
									/>
									<button
										id="btn24"
										label="ComboTextBox"
										hexpand="true"
										row="1"
										column="1"
										icon_path="./assets/images/icons/input.png"
										on_click="sig_properties_dialog"
										param_1="combo_text_box"
									/>
								</grid>
							</expander>

							<!-- Action Buttons -->
							<separator />
							<box 
								spacing="5"
								valign="center"
								halign="center"
								margin_top="10"
							>
								<box 
									orientation="horizontal"
									spacing="5"
									valign="center"
									halign="center"
									margin_top="10"
								>
									<button 
										label="Generate XML"
										on_click="sig_generate_xml"
									/>
									<button 
										label="LOAD"
										on_click="sig_run_generated_xml"
									/>
								</box>
								<box 
									orientation="horizontal"
									spacing="5"
									valign="center"
									halign="center"
									margin_top="10"
								>
									<button 
										label="Import UI"
										on_click="sig_import_ui_from_xml"
									/>
									<button 
										label="Generate UI"
										on_click="sig_generate_ui"
									/>
									
								</box>
								<button 
									label="Refrech UI"
									on_click="sig_refrech_crud_ui"
								/>
							</box>
						</box>
                </paned>
            </paned>
        </scrolled_window>
    </box>
</window>
